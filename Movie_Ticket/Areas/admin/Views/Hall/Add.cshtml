@model Movie_Ticket.Areas.admin.ViewModels.HallAdd

@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@Html.Raw(ViewBag.ErrorMessage)
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Salon Ekle <small>Salon İçeriğinin Eklenmesi</small></h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.RouteUrl("Halls")'">Salonların Listesi</button>
        </div>

        <div class="clearfix"></div>
        @Html.Raw(@ViewBag.Message)
        @using (Html.BeginForm("Add", "Hall", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="x_content">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dersadi">
                        Salon Adı <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.EditorFor(model => model.SalonAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SalonAdi, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="clearfix"></div><br />

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dersadi">
                        Kapasite <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.EditorFor(model => model.Kapasite, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Kapasite, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="clearfix"></div><br />
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dersadi">
                        Satir <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.EditorFor(model => model.Satir, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Satir, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="clearfix"></div><br />
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dersadi">
                        Sütun <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.EditorFor(model => model.Sutun, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sutun, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="clearfix"></div>
                <br />
                <br />
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


