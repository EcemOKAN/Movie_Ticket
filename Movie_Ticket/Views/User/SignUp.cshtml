@model Movie_Ticket.ViewModels.UyeOl
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <title>Film Sitesi</title>
</head>
<body class="kayitbgnew">
    <!-- Header -->
    <div id="Header">
        <div class="Header">
            <img src="~/Content/img/logo.png" alt="Logo" />
        </div>
    </div>
    <!-- Body -->
    <div id="Body2" style="height:100px">
        <!-- Body Kategori -->
        <div class="BKapla">
            <div class="BKat">
                <!-- Sol Menü -->
                <ul class="BSol">
                    <li><a href="@Url.RouteUrl("Home")">VİZYONDAKİ FİLMLER</a></li>

                </ul>
                <!-- Sağ Menü -->
                <ul class="BSag">
                    <li><div class="k1"></div><a href="@Url.RouteUrl("SignUp")">KAYDOL</a></li>
                    <li><div class="g1"></div><a href="@Url.RouteUrl("SignIn")">GİRİŞ YAP</a></li>
                    <div class="clear"></div>
                </ul>
            </div>

            <div class="clear"></div>

        </div>
    </div>
    <!-- Giriş Bölümü -->
    <div id="KayitBolumu">
        <div class="baslik">KAYIT OL</div>
        @using (Html.BeginForm("SignUp", "User", FormMethod.Post))
        {
            @Html.EditorFor(Model => Model.Ad, new { htmlAttributes = new { @class = "form-control", @placeholder="Ad" } })
            @Html.EditorFor(Model => Model.Soyad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Soyad" } })
            @Html.EditorFor(Model => Model.Ceptel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cep Telefonu 05555555555" } })
            @Html.EditorFor(Model => Model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })
            @Html.EditorFor(Model => Model.SifreHash, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre", @type = "password" } })

            
            <button>KAYDOL</button>
        }

    </div>

</body>
</html>